{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "a user authentication and authorization service",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "env-cmd -f ./config/dev.env nodemon src/index.js",
    "test": "env-cmd -f ./config/test.env jest --runInBand",
    "test:watch": "env-cmd -f ./config/test.env jest --watch --runInBand",
    "prepare:dev": "husky install"
  },
  "author": "Mohab Abd El-Dayem <mohab.m.mohamed@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.2"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "husky": "^7.0.1",
    "jest": "^27.0.4",
    "lint-staged": "^9.4.3",
    "nodemon": "^2.0.7",
    "prettier-standard": "^16.4.1",
    "supertest": "^6.1.3",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-standard",
      "git add"
    ]
  }
}